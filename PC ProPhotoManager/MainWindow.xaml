<Controls:MetroWindow
    x:Class="PC_ProPhotoManager.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:local="clr-namespace:PC_ProPhotoManager"
    mc:Ignorable="d"
        
    Title="MainWindow" Height="570" Width="870">

    <Grid Name="GridMainWin" 
            Background="#FF2D2D30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu
            Name="MainMenu"
            Grid.Row="0" Background="#FF2D2D30">

            <MenuItem Header="Файл">

            </MenuItem>

            <MenuItem Header="Информация">

            </MenuItem>
        </Menu>

        <ToolBar Grid.Row="1" Background="#FF2D2D30"/>

        <Frame 
            Name="Page"
            Grid.Row="2" 
            Source="/Pages/PagePhotoGallery.xaml"
            NavigationUIVisibility="Hidden" BorderBrush="Black"/>
    </Grid>
</Controls:MetroWindow>
